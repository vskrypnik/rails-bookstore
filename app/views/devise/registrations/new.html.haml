%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t '.signup'

    %a.general-login-icon{href: '#'}
      %i.fa.fa-facebook-official

    %p.general-login-text= t '.or'

  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'general-form' }) do |f|
    = devise_error_messages!

    .form-group.mb-30
      = f.label :email, class: 'control-label input-label'
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: true

    .form-group.mb-30
      = f.label :password, class: 'control-label input-label'
      = f.password_field :password, class: 'form-control', placeholder: true, autocomplete: "off"

    .form-group.mb-30
      = f.label :password_confirmation, class: 'control-label input-label'
      = f.password_field :password_confirmation, class: 'form-control', placeholder: true, autocomplete: "off"

    .text-center
      %button.btn.btn-default.mb-20= t '.submit'

  %p.general-sign-text.text-center
    = t '.already_have_an_account'

    = link_to t('.signin'), new_user_session_path, class: 'in-gold-500'
