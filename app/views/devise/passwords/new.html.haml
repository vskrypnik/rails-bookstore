%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t '.forgot_your_password'

    %p.general-login-text
      = t '.we`ll_email_you_reset_password_instructions'

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'general-form' }) do |f|
    - if flash[:alert]
      .alert.alert-danger
        = flash[:alert]

    = devise_error_messages!

    .form-group.mb-30
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: true

    %button.btn.btn-default.center-block.mb-20= t '.send_me_reset_password_instructions'
